@model NavigationApp.Models.Player

@{
    ViewBag.Title = "Edit";
}

<h2>Редактирование игрока</h2>

@using (Html.BeginForm())
{
    <h4>Футболист</h4>
    @Html.HiddenFor(model => model.Id)
    <p>
        Имя игрока<br />
        @Html.EditorFor(model => model.Name)
    </p>
    <p>
        Возраст<br />
        @Html.EditorFor(model => model.Age)
    </p>
    <p>
        Позиция на поле<br />
        @Html.EditorFor(model => model.Position)
    </p>
    <p>
        Команда<br />
        @Html.DropDownListFor(model => model.TeamId, ViewBag.Teams as SelectList)
    </p>
    <p>
        <input type="submit" value="Изменить игрока" />
    </p>
}
<div>
    @Html.ActionLink("К списку игроков", "Index")
</div>


